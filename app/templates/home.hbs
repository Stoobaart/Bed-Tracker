{{#let this.model.hospital as |hospital|}}
  <div>{{hospital.name}}</div>
  <div>Total beds: {{hospital.totalBeds}}</div>
  <div>Unavailable beds: {{hospital.unavailableBeds}}</div>
  <div>Available beds: {{hospital.availableBeds}}</div>

  {{#if hospital.useQrCode}}
    <button {{on "click" this.addBed}}>Add bed</button>
    <LinkTo @route="scan" @tagName="button">Scan a Bed</LinkTo>
  {{else}}

  {{/if}}
{{/let}}