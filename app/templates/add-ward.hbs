<div class="page">
  <form
    class="form form_add"
    {{on "submit" this.createWard}}>
    <div class="form_header">Add a ward</div>

    <label
      for="wardName"
      class="form_label">
      Ward name
    </label>
    <Input
      @type="text"
      @name="wardName"
      @class="form_input form_short-name-input"
      @value={{this.shortName}}
      @key-up={{action (mut this.shortName) value=@target.value}} />
    <div class="form_help-text">Enter the ward name</div>

    <label
      for="description"
      class="form_label">
      Ward description
      <span>~ optional</span>
    </label>
    <Input
      @type="text"
      @name="description"
      @class="form_input form_longName-input"
      @value={{this.longName}}
      @key-up={{action (mut this.longName) value=@target.value}} />
    <div class="form_help-text">Enter the ward description</div>

    <button
      type="submit"
      class="form_btn"
      disabled={{not this.shortName}}>
      Add ward
    </button>
  </form>

  {{#if this.error}}
    <div class="banner banner--error">
      <div class="banner_title"><img src="/assets/images/error.svg" alt="">Something went wrong</div>
      <p>Please try adding the ward again</p>
      <img src="/assets/images/close.svg" alt="close" class="banner_close" {{on "click" (fn (mut this.error) false)}}>
    </div>
  {{/if}}
</div>